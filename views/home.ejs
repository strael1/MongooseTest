<%- include('includes/header.ejs') %>
<body>

    <div class="container">
        <div class="table-title">
            <a class="link" href="/cadastro">Cadastrar usu√°rio</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>E-mail</th>
                    <th>Telefone</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                <% if(users.length > 0) { %>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%- user.nome; %></td>
                            <td><%- user.email; %></td>
                            <td><%- user.telefone; %></td> 
                            <td>
                                <a class="link" href="/deleteuser/<%- user._id; %>">Deletar</a>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>
<%- include('includes/footer.ejs') %>